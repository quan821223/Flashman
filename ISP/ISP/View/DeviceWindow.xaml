<Window x:Class="ISP.View.DeviceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ISP.View"
        mc:Ignorable="d"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="device" Height="480" Width="370" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Grid Margin ="0 5 0 5">
        <Grid.RowDefinitions >
            <RowDefinition Height="10"/>
            <RowDefinition Height="23"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" HorizontalAlignment="Stretch" Background="#FFAFD9FF"/>
        <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">

            <Label Content="Remind " FontFamily="Arial Black" Foreground="#87000000"/>
        </Grid>
        <Grid Grid.Row="2">
            <Image Source="/pic/圖片1.png" />

        </Grid>
        <Grid Grid.Row="3">

            <ui:Button Grid.Column = "1" 
                        Margin="8"
                        Command="{Binding bt_winReminder}"                     
                        x:Name="bt_close"
                        Content="Check" 
                        ToolTip="set program parameters" 
                        Cursor="Hand"  
                        FontFamily="Consolas"                    
                        Appearance="Primary"
                        VerticalAlignment="Stretch" 
                        Width="90" Height="30"
                        FontSize="16" Background="#FF9AC8F1" Click="bt_close_Click" />
        </Grid>
        <Grid Grid.Row="4" HorizontalAlignment="Stretch" Background="#FFAFD9FF"/>
    </Grid>

</Window>
